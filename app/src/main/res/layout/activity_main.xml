<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainview"
        android:stretchColumns="*">

        <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
            android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <DigitalClock android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:format12Hour="true"
            android:textSize="50sp"
            android:timeZone="Canada/Toronto"/>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView android:id="@+id/present_number"
                android:gravity="center"
                android:textColor="#00FF00"
                android:textSize="60sp" />

            <TextView android:id="@+id/away_number"
                android:gravity="center"
                android:textColor="#ff4000"
                android:textSize="60sp"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Students Present"
                android:textColor="#00FF00"
                android:gravity="center"
                android:textSize="14sp"/>

            <TextView android:text="Students Away"
                android:textColor="#ff4000"
                android:gravity="center"
                android:textSize="14sp"/>

        </TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Website"
            android:clickable="true"
            android:autoLink="web"
            android:cursorVisible="true"
            android:linksClickable="true"
            android:onClick="goToSo"
            android:id="@+id/websitebutton" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_tiger"/>

        <!--include layout="@layout/content_main" /-->

    </TableLayout>

</android.support.design.widget.CoordinatorLayout>
